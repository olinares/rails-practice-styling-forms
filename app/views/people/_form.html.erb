<%= form_for(@person) do |f| %>
<% if @person.errors.any? %>
<div class="col-sm-10 col-sm-offset-2 alert alert-danger" id="error_explanation">
  <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

  <ul>
    <% @person.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field form-group">
  <%= f.label :first_name, class: "col-sm2 control-label" %><br>
  <div class="col-sm-7">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>
<div class="field form-group">
  <%= f.label :last_name, class: "col-sm2 control-label" %><br>
  <div class="col-sm-7">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>
<div class="field form-group">
  <%= f.label :date_of_birth, class: "col-sm2 control-label" %><br>
  <div class="col-sm-7">
    <%= f.date_select :date_of_birth, class: "form-control" %>
  </div>
</div>
<div class="field form-group">
  <%= f.label :bio, class: "col-sm2 control-label" %><br>
  <div class="col-sm-7">
    <%= f.text_area :bio, class: "form-control" %>
  </div>
</div>
<div class="field form-group">
  <div class="col-sm-2 col-sm-offset-2">
    <%= f.label :active, class: "" %><br>
    <%= f.check_box :active %>
  </div>
</div>
<div class="field form-group">
  <div class="col-sm-10 col-sm-offset-2">
    <%= f.submit class: "btn btn-info" %>
    <%= link_to "Cancel", people_path, class: "btn-btn-default" %>
  </div>
</div>

<% end %>
